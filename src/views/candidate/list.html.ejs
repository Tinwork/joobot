<% layout('../html/layout.html.ejs') %>
<div class="row">
        
        <% for(var i=0; i < data.length; i++) { %>
        <div class="col-lg-3 col-sm-4 col-md-4 col-xs-6">
            <a href="#" id="#" class="douceur-item">
                <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                    <div class="flipper">
                        <div class="front">
                            <span class="job-name"><%= data[i].firstname %></span>
                        </div>
                        <div class="back">
                            <div class="card">
                                <span class="douceur-name"><%= data[i].lastname %></span>
                                <span class="douceur-lastname"><%= data[i].email %></span>
                                <span class="douceur-lastname"><%= data[i].mobile %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>