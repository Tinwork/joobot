<% layout('../html/layout.html.ejs') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 header-job">
            <h2 class="h2" id="h2">Liste des profils :</h2>
            <a href="/jobs/new" class="btn btn-job-new btn-group btn-success">Cr√©er un nouveau profil</a>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="row">
        <% if (jobs !== null) { %>
        <% for(var i=0; i < jobs.length; i++) { %>
        <div class="col-lg-3 col-sm-4 col-md-4 col-xs-6">
            <a href="#" id="#" class="douceur-item">
                <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                    <div class="flipper">
                        <div class="front">
                            <img src="<%= jobs[i].thumb %>" alt="">
                            <span class="job-name"><%= jobs[i].title %></span>
                        </div>
                        <div class="back">
                            <div class="card">
                                <span class="douceur-name"><%= jobs[i].subtitle %></span>
                                <div class="description">
                                    <p><%= jobs[i].description %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
        <% } %>
    </div>
</div>


